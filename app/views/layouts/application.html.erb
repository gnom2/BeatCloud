<!DOCTYPE html>
<html>
  <head>
    <title>BeatCloud</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://unpkg.com/wavesurfer.js"></script>

     <meta property="og:title" content="BeatCloud" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://beat-cloud.herokuapp.com/#/" />
    <meta property="og:image" content='<%= image_url asset_path('beatcloud-img.PNG') %>'/>
    <meta property="og:description" content="Social music sharing platform for both artists and music enthusiasts" />

    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link href="//db.onlinewebfonts.com/c/67c875133a76f1dc00e6beab89cd7329?family=Interstate" rel="stylesheet" type="text/css"/>
    <%= favicon_link_tag asset_path('favicon.png') %>


    <script type="text/javascript">
      window.track1URL = "<%= image_url('track1.png') %>";
      window.track2URL = "<%= image_url('track2.png') %>";
      window.track3URL = "<%= image_url('track3.png') %>";
      window.track4URL = "<%= image_url('track4.png') %>";
      window.track5URL = "<%= image_url('track5.png') %>";
      window.track6URL = "<%= image_url('track6.png') %>";
      window.track7URL = "<%= image_url('track7.png') %>";
      window.track8URL = "<%= image_url('track8.png') %>";
      window.track9URL = "<%= image_url('track9.png') %>";
      window.track10URL = "<%= image_url('track10.png') %>";
      window.track11URL = "<%= image_url('track11.png') %>";
      window.track12URL = "<%= image_url('track12.png') %>";
      window.teaserBgURL = "<%= image_url('teaser-background.png') %>";
      window.mobileURL = "<%= image_url('mobile.png') %>";
      window.appleURL = "<%= image_url('dlapple.png') %>";
      window.androidURL = "<%= image_url('dlandroid.png') %>";
      window.logoURL = "<%= image_url('logo.png') %>";
      window.navURL = "<%= image_url('nav.jpg') %>";
    </script>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
